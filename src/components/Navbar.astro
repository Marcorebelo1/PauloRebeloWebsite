---
import MobileMenu from './MobileMenu';
---

<nav class="bg-white/90 backdrop-blur-md shadow-md border-b border-blue-100 sticky top-0 z-50">
  <div class="max-w-4xl lg:max-w-6xl xl:max-w-7xl mx-auto px-4 ">
    <div class="flex justify-between items-center h-16">
      
      <!-- Logo -->
      <a href="/" class="flex items-center group">
        <div class="text-2xl font-bold text-blue-700 tracking-tight flex items-center gap-1">
          Empresa<span class="text-gray-800">Pintura</span>
        </div>
      </a>


      <!-- Menu desktop -->
      <div class="hidden md:flex space-x-6 items-center">
        <a href="/" class="nav-link">Início</a>
        <a href="/servicos" class="nav-link">Serviços</a>
        <a href="/portefolio" class="nav-link">Portefolio</a>
        <a href="/quem-somos" class="nav-link">Quem Somos</a>
      </div>

      <div>
        <a href="/contacto" class="ml-4 px-4 py-2 rounded-full bg-gradient-to-r from-blue-600 to-cyan-400 text-white font-semibold shadow hover:from-cyan-400 hover:to-blue-600 transition-all">Contacto</a>
      </div>
      
      <!-- Botão menu mobile -->
      <div class="md:hidden">
        <MobileMenu client:load />
      </div>

    </div>
  </div>
</nav>
<style>
.nav-link {
  @apply text-gray-700 font-medium relative transition-colors duration-200;
}
.nav-link:hover {
  @apply text-blue-600;
}
.nav-link::after {
  content: '';
  @apply absolute left-0 -bottom-1 w-0 h-0.5 bg-gradient-to-r from-blue-600 to-cyan-400 rounded-full transition-all duration-300;
}
.nav-link:hover::after, .nav-link.active::after {
  @apply w-full;
}
</style>
