---
import Layout from '../layouts/Layout.astro';
import DestaqueProjeto from '../components/Portefolio/DestaqueProjeto';
import HeroPortefolio from '../components/Portefolio/HeroPortefolio';
import GaleriaTrabalhos from '../components/Portefolio/GaleriaTrabalhos';
---

<Layout>
    <HeroPortefolio client:load />
    
    <DestaqueProjeto client:load 
        titulo="Escola Pública"
        descricao="Neste projeto, revitalizámos completamente a Pintura Exterior e o Telhado Da Escola"
        imagem="/assets/projetos/Obra17.jpeg"
        altImagem="Projeto de fachada"
        local="Leiria"
        tipo="Pintura exterior"
        imagemDireita={true}
    />

    <DestaqueProjeto client:load 
        titulo="Pintura de Apartamento no Parque das Nações - Lisboa"
        descricao="Transformação completa de um apartamento antigo num espaço moderno e acolhedor, com pintura de interiores e aplicação de tons suaves."
        imagem="/assets/projetos/Obra30.jpeg"
        altImagem="Apartamento renovado em Coimbra"
        local="Coimbra"
        tipo="Pintura interior"
        imagemDireita={false}
    />

    <DestaqueProjeto client:load 
        titulo="Vivenda"
        descricao="Renovação da fachada de uma vivenda, preservando detalhes arquitetónicos e utilizando tinta de alta durabilidade."
        imagem="/assets/projetos/Obra21.jpeg"
        altImagem="Vivenda clássica em Aveiro"
        local="Leiria"
        tipo="Pintura exterior"
        imagemDireita={true}
    />

    <DestaqueProjeto client:load 
        titulo="Igreja no Vimeiro, Leiria"
        descricao="Pintura Completa de uma Igreja com 20m de altura, incluindo a restauração de detalhes históricos."
        imagem="/assets/projetos/Obra22.jpeg"
        altImagem="Igreja em Vimeiro"
        local="Vimeiro, Leiria"
        tipo="Pintura comercial"
        imagemDireita={false}
    />

    <GaleriaTrabalhos client:load />

</Layout>